directories = kpathsea/kpathsea dvipdfm
prefix=@prefix@
datadir=@datadir@
bindir=@bindir@
CONFIG=config.h config.cache config.log config.status Makefile
default:
	cd kpathsea && $(MAKE) XMAKEARGS=kpsewhich
	cd dvipdfm && $(MAKE)
distclean clean: this-distclean
	for d in $(directories); do \
	  (cd $$d && $(MAKE) $@) ; done;
this-distclean:
	rm -f $(CONFIG)
install:
	cd dvipdfm && $(MAKE) $@
