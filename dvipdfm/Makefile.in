CPPFLAGS=@CPPFLAGS@ -I .
INSTALL=@INSTALL@
LIBS=@LIBS@ -lm 
srcdir=@srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datadir=@datadir@
